{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="loginForm">
<h1 class="text-center">S'inscrire</h1>

    {{ form_start(registrationForm) }}
    <div class="formBox">

        {{ form_row(registrationForm.pseudo, {
        attr: {
                class: "borderColor"
            }
    }) }}

        {{ form_row(registrationForm.email, {
        attr: {
                class: "borderColor"
            }
    }) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.majeur, {
            label: 'Je suis majeur'
        }) }}

        <button type="submit" class="mixGradient shadows">S'inscrire</button>
        <p>Déjà inscrit ? <a href="{{path('app_login')}}">Connectez vous.</a></p>
    </div>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}